model Poster {
  id             Int             @id @default(autoincrement())
  title          String
  artistFullName String          @map("artist_full_name")
  posterImageUrl String          @map("poster_image_url")
  formatPrices   FormatPrice[]
  createdAt      DateTime        @default(now()) @map("created_at")
  updatedAt      DateTime        @updatedAt @map("updated_at")
  RemovedPoster  RemovedPoster[]

  @@map("posters")
}

// Thombstone pattern
model RemovedPoster {
  id        Int      @id @default(autoincrement())
  posterId  Int      @map("poster_id")
  deletedAt DateTime @default(now())
  poster    Poster   @relation(fields: [posterId], references: [id])

  @@index([posterId, deletedAt], name: "idx_posterId_deletedAt")
  @@map("removed_posters")
}

enum Format {
  A4
  Size_30x30_cm
  Size_30x40_cm
  Size_50x50
  Size_50x70_cm
  Size_70x70_cm
  Size_70x100_cm
  Size_100x100_cm
  Size_100x140_cm
}

model FormatPrice {
  id       Int    @id @default(autoincrement())
  format   Format
  price    Int
  posterId Int    @map("poster_id")
  poster   Poster @relation(fields: [posterId], references: [id])

  @@map("format_prices")
}
